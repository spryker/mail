{
  "name": "spryker/mail",
  "description": "Mail bundle",
  "license": "proprietary",
  "require": {
    "spryker/glossary": "^3.0.0",
    "spryker/kernel": "^3.0.0"
  },
  "require-dev": {
    "spryker/code-sniffer": "*",
    "spryker/testify": "*",
    "spryker/twig": "*"
  },
  "suggest": {
    "swiftmailer/swiftmailer": "Default Mailer"
  },
  "autoload": {
    "psr-0": {
      "Spryker": "src/"
    }
  },
  "autoload-dev": {
    "psr-0": {
      "Unit": "tests/"
    },
    "psr-4": {
      "Testify\\Module\\": "vendor/spryker/testify/tests/_support/Module",
      "Config\\Module\\": "vendor/spryker/config/tests/_support/Module",
      "Transfer\\Module\\": "vendor/spryker/transfer/tests/_support/Module"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://code.spryker.com/repo/private"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "4.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
